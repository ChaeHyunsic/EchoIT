<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:minHeight="90dp">

    <TextView
        android:id="@+id/comment_nickname_js"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:text="닉네임"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comment_content_js"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:text="댓글내용~~~~~~~~"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/comment_nickname_js"
        app:layout_constraintTop_toBottomOf="@+id/comment_nickname_js" />

    <TextView
        android:id="@+id/comment_created_js"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/08 23:13"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/comment_content_js"
        app:layout_constraintTop_toBottomOf="@+id/comment_content_js" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#7A7A7A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/comment_content_js"
        app:layout_constraintStart_toStartOf="@+id/comment_content_js" />

</androidx.constraintlayout.widget.ConstraintLayout>