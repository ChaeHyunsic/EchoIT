<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/review_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/selected_subject_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="과목명"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/selected_subject_professor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="교수 : "
            android:textSize="30sp"
            android:layout_marginStart="40dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/selected_subject_name"/>
        <TextView
            android:id="@+id/professor_name_js"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교수명"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/selected_subject_professor_name"
            app:layout_constraintTop_toTopOf="@+id/selected_subject_professor_name"
            app:layout_constraintBottom_toBottomOf="@+id/selected_subject_professor_name"/>
        <RatingBar
            android:id="@+id/evaluate_score_rb_js"
            style="@style/Widget.AppCompat.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/selected_subject_professor_name" />

        <TextView
            android:id="@+id/selected_subject_avg_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="평점 : "
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/evaluate_score_rb_js"/>

        <TextView
            android:id="@+id/score_tv_js"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="@+id/selected_subject_avg_val"
            app:layout_constraintStart_toEndOf="@+id/selected_subject_avg_val"
            app:layout_constraintBottom_toBottomOf="@+id/selected_subject_avg_val"/>

        <TextView
            android:id="@+id/max_score_tv_js"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / 5.0"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="@+id/score_tv_js"
            app:layout_constraintBottom_toBottomOf="@+id/score_tv_js"
            app:layout_constraintStart_toEndOf="@+id/score_tv_js"/>
        <TextView
            android:id="@+id/post_review_tv_js"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="평가 글쓰기"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@color/gray_color"
            app:layout_constraintTop_toBottomOf="@+id/selected_subject_avg_val"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
            android:id="@+id/post_review_et_js"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="6"
            android:maxLines="10"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@+id/post_review_tv_js"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Button
            android:id="@+id/evaluate_review_complete_btn_js"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평가 완료"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/post_review_et_js"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>