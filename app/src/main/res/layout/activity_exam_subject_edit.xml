<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExamSubjectCreateActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_tv_js"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="일정 수정"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/exam_sub_close_iv_js"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/close"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/title_tv_js"
            app:layout_constraintEnd_toEndOf="@+id/title_tv_js"
            app:layout_constraintTop_toTopOf="@+id/title_tv_js" />

        <EditText
            android:id="@+id/title_et_js"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_rounded_corner_rectangle"
            android:gravity="top"
            android:hint="제목을 적으세요."
            android:maxLines="2"
            android:padding="5dp"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_tv_js" />


        <View
            android:id="@+id/title_line_v_js"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#076300"
            app:layout_constraintEnd_toEndOf="@+id/title_et_js"
            app:layout_constraintStart_toStartOf="@+id/title_et_js"
            app:layout_constraintTop_toBottomOf="@+id/title_et_js" />

        <EditText
            android:id="@+id/content_et_js"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_rounded_corner_rectangle"
            android:gravity="top"
            android:hint="시험 및 과제 일정 내용을 기입해주세요"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:padding="5dp"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_line_v_js" />

        <View
            android:id="@+id/content_line_v_js"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#076300"
            app:layout_constraintTop_toBottomOf="@+id/content_et_js" />

        <Button
            android:id="@+id/deadline_check_tv_edit_js"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="기간선택"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/content_et_js"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/content_et_js"
            app:layout_constraintTop_toBottomOf="@+id/content_line_v_js" />

        <Button
            android:id="@+id/edit_btn_js"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#076300"
            android:text="수정"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/deadline_check_tv_edit_js"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/content_et_js"
            app:layout_constraintTop_toBottomOf="@+id/deadline_check_tv_edit_js" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
