<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExamSubjectEditActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_tv_js"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록"
            android:backgroundTint="@color/select_color"
            android:textColor="@color/black"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"/>
        <View
            android:id="@+id/title_line_v_js"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#BFE80C"
            app:layout_constraintTop_toBottomOf="@+id/title_tv_js"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/content_et_js"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="6"
            android:maxLines="10"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@+id/title_line_v_js"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:id="@+id/content_line_v_js"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#BFE80C"
            app:layout_constraintTop_toBottomOf="@+id/content_et_js"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/deadline_tv_js"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마감기간 : "
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/content_line_v_js"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/deadline_check_tv_js"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="data"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/content_line_v_js"
            app:layout_constraintStart_toEndOf="@+id/deadline_tv_js"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>

        <DatePicker
            android:id="@+id/date_picker_js"
            android:layout_width="300dp"
            android:layout_height="400dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deadline_tv_js"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
