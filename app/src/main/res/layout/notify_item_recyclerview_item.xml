<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:minHeight="95dp">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp">
            <ImageView
                android:id="@+id/bell_iv_js"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bell"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/exam_sub_title_tv_js"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일정 타이틀"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/bell_iv_js"
                app:layout_constraintStart_toEndOf="@+id/bell_iv_js"
                app:layout_constraintTop_toTopOf="@+id/bell_iv_js" />
            <TextView
                android:id="@+id/exam_sub_content_tv_js"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:ellipsize="end"
                android:text="내용이 들어간다아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아아"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:maxLines="1"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/exam_sub_title_tv_js"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/exam_sub_endAt_tv_js"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022-12-25"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/exam_sub_title_tv_js"
                app:layout_constraintBottom_toBottomOf="@+id/exam_sub_title_tv_js"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>