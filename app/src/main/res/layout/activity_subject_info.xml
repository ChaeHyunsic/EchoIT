<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/evaluate_subject_fab_js"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#DDA28F"
        android:text="평가하기"
        android:textStyle="bold"
        android:theme="@style/MaterialAlertDialog.Material3"
        app:icon="@drawable/pen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/selected_subject_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="모바일프로그래밍및실험"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/subject_info_close_iv_js"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/close"
        app:layout_constraintBottom_toBottomOf="@+id/selected_subject_tv_name"
        app:layout_constraintEnd_toEndOf="@+id/selected_subject_tv_name"
        app:layout_constraintTop_toTopOf="@+id/selected_subject_tv_name" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_subject_tv_name">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/subject_info_cl_js"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/course_info_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/selected_subject_professor_name"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:text="교수명"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/selected_subject_separation_tv_js"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="구분"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/selected_subject_professor_name"
                    app:layout_constraintTop_toBottomOf="@+id/selected_subject_professor_name" />

                <TextView
                    android:id="@+id/selected_subject_grade_tv_js"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="학년"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/selected_subject_separation_tv_js"
                    app:layout_constraintTop_toBottomOf="@+id/selected_subject_separation_tv_js" />

                <TextView
                    android:id="@+id/selected_subject_time_tv_js"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="시간"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/selected_subject_grade_tv_js"
                    app:layout_constraintTop_toBottomOf="@+id/selected_subject_grade_tv_js" />

                <TextView
                    android:id="@+id/selected_subject_room_tv_js"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="장소"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/selected_subject_time_tv_js"
                    app:layout_constraintTop_toBottomOf="@+id/selected_subject_time_tv_js" />

                <TextView
                    android:id="@+id/selected_subject_credit_tv_js"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:text="학점"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/selected_subject_room_tv_js"
                    app:layout_constraintTop_toBottomOf="@+id/selected_subject_room_tv_js" />

                <TextView
                    android:id="@+id/selected_subject_professor_name_data_js"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="이단영"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/selected_subject_professor_name"
                    app:layout_constraintStart_toEndOf="@+id/selected_subject_professor_name"
                    app:layout_constraintTop_toTopOf="@+id/selected_subject_professor_name" />

                <TextView
                    android:id="@+id/selected_subject_separation_tv_data_js"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전선"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/selected_subject_separation_tv_js"
                    app:layout_constraintStart_toStartOf="@+id/selected_subject_professor_name_data_js"
                    app:layout_constraintTop_toTopOf="@+id/selected_subject_separation_tv_js" />

                <TextView
                    android:id="@+id/selected_subject_grade_tv_data_js"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/selected_subject_grade_tv_js"
                    app:layout_constraintStart_toStartOf="@+id/selected_subject_separation_tv_data_js"
                    app:layout_constraintTop_toTopOf="@+id/selected_subject_grade_tv_js" />

                <TextView
                    android:id="@+id/selected_subject_time_tv_data_js"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월3,4,수1,2"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/selected_subject_time_tv_js"
                    app:layout_constraintStart_toStartOf="@+id/selected_subject_grade_tv_data_js"
                    app:layout_constraintTop_toTopOf="@+id/selected_subject_time_tv_js" />

                <TextView
                    android:id="@+id/selected_subject_room_tv_data_js"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19-509"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/selected_subject_room_tv_js"
                    app:layout_constraintStart_toStartOf="@+id/selected_subject_time_tv_data_js"
                    app:layout_constraintTop_toTopOf="@+id/selected_subject_room_tv_js" />

                <TextView
                    android:id="@+id/selected_subject_credit_tv_data_js"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/selected_subject_credit_tv_js"
                    app:layout_constraintStart_toStartOf="@+id/selected_subject_room_tv_data_js"
                    app:layout_constraintTop_toTopOf="@+id/selected_subject_credit_tv_js" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/subject_rating_score_cl_js"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/course_info_line"
                app:layout_constraintTop_toBottomOf="@+id/subject_info_cl_js">

                <TextView
                    android:id="@+id/subject_score_average_tv_js"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="4.5"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RatingBar
                    android:id="@+id/ratingBarInficator"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.1"
                    app:layout_constraintBottom_toBottomOf="@+id/subject_score_average_tv_js"
                    app:layout_constraintStart_toEndOf="@+id/subject_score_average_tv_js"
                    app:layout_constraintTop_toTopOf="@+id/subject_score_average_tv_js" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/subject_recyclerview_parent_cl_js"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/course_info_line"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                app:layout_constraintTop_toBottomOf="@+id/subject_rating_score_cl_js">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/evaluate_review"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    tools:listitem="@layout/review_subject_recyclerview_item" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>