<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <Spinner
            android:id="@+id/community_spinners_js"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/subject_grade"
            android:spinnerMode="dialog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/community_grade_js"/>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/community_search_view_js"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconifiedByDefault="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/community_grade_js"
            app:layout_constraintStart_toEndOf="@id/community_spinners_js"
            app:queryHint="검색어를 입력하시오"/>
        <TextView
            android:id="@+id/community_grade_js"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="학년"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/community_search_view_js" />

        <TextView
            android:id="@+id/community_title_text_js"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="제목"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/community_grade_js"
            app:layout_constraintStart_toEndOf="@+id/community_grade_js"
            app:layout_constraintTop_toTopOf="@+id/community_grade_js"/>

        <TextView
            android:id="@+id/community_created_text_js"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성일"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/community_title_text_js"
            app:layout_constraintTop_toTopOf="@+id/community_title_text_js"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            tools:layout_editor_absoluteX="215dp" />

        <View
            android:id="@+id/community_view_js"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#7A7A7A"
            app:layout_constraintTop_toBottomOf="@+id/community_title_text_js"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/community_rv_js"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/community_view_js"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/community_recyclerview_item"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>